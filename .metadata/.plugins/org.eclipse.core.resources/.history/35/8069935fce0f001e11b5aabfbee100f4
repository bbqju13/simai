  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 250px;
  height: 2px;
  background: #999;
}

.example-1 .heading-line--container, .example-2 .heading-line--container, .example-3 .heading-line--container, .example-4 .heading-line--container, .example-5 .heading-line--container {
  padding: 0 2em;
  width: auto;
  float: none;
  position: relative;
  display: inline-block;
  top: 0;
  bottom: 0;
  margin: 0;
  line-height: 1;
}

.example-1 .heading-line--container .heading-line--left, .example-2 .heading-line--container .heading-line--left, .example-3 .heading-line--container .heading-line--left, .example-4 .heading-line--container .heading-line--left, .example-5 .heading-line--container .heading-line--left {
  right: 100%;
}

.example-1 .heading-line--container .heading-line--right, .example-2 .heading-line--container .heading-line--right, .example-3 .heading-line--container .heading-line--right, .example-4 .heading-line--container .heading-line--right, .example-5 .heading-line--container .heading-line--right {
  left: 100%;
}

.example-2 .heading-line--container .heading-line--left:before,
.example-2 .heading-line--container .heading-line--right:before, .example-3 .heading-line--container .heading-line--left:after,
.example-3 .heading-line--container .heading-line--right:after, .example-4 .heading-line--container .heading-line--left:after,
.example-4 .heading-line--container .heading-line--right:after, .example-5 .heading-line--container .heading-line--left:before,
.example-5 .heading-line--container .heading-line--right:before {
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
}

